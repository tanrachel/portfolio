<% include ./partials/header %>
<div class = "container">
	<h1 style ="text-align:center;margin-top:20px "> Contact Me </h1>
	<div style = "width:80%; margin: 25px auto;">
		<form action="/contactme" method="post">
			<div class = "form-group">
				<label for="name">Name</label>
				<input  class= "form-control"  name="name" type="text" placeholder="Your Name" required>
			</div>

			<div class = "form-group">
				<label for="email">Email</label>
				<input class ="form-control" name="email" type="text" placeholder="Your Email" required>
			</div>
			
			<div class = "form-group">
				<label for="title">Email Subject</label>
				<input class ="form-control" name="title" type="text" placeholder="Email Subject" required>
			</div>

			<div class = "form-group">			
				<label for="message">Message</label>
				<textarea class ="form-control" name="message" placeholder="Enter your message here" rows="5" required>
				</textarea>
			</div>

			<button type="submit">Submit</button>
		</form>
	</div>
</div>
<% include ./partials/footer %>